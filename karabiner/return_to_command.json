{
    "title": "Remap Return to Command when pressed with another key",
    "rules": [
        {
            "description": "Remap Return to Command when pressed with another key",
            "manipulators": [
                {
                    "from": {
                        "key_code": "return_or_enter",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
